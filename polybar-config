;;;;;;;;;;;;;;; Krathalan's polybar configuration ;;;;;;;;;;;;;;;

[colors]
black = #000
white = #fff
green = #00ff96
yellow = #fff569

[bar/mybar]
monitor-strict = false
monitor-exact = true
bottom = true
fixed-center = true
width = 100%
height = 60
offset-x = 0
offset-y = -12

; Colors
background = #aa000000
foreground = ${colors.white}

; Under-/overline pixel size and argb color
line-size = 15
padding-right = 1
module-margin = 0

; Fonts
font-0 = FiraMono:size=11;
font-1 = MaterialIcons:size=11;

; Modules
modules-left = i3 xwindow
modules-right = vpn network pulseaudio cpu date

; Tray
tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0

; Misc
dpi-x = 192
dpi-y = 192
locale = en_US.UTF-8
enable-ipc = false
override-redirect = true
wm-restack = i3

[module/i3]
type = internal/i3
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
override-redirect = true

; Available tags:
format = <label-state> <label-mode>

; Mode
label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.green}

; Focused
label-focused = %index%
label-focused-foreground = ${colors.white}
label-focused-underline = ${colors.green}
label-focused-background = #ee444444
label-focused-padding = 3

; Unfocused
label-unfocused = %index%
label-unfocused-padding = 3

; Urgent
label-urgent = %index%
label-urgent-foreground = ${colors.black}
label-urgent-background = #bd2c40
label-urgent-padding = 3

[module/xwindow]
type = internal/xwindow

format = <label>
format-background = ${root.background}
format-foreground = ${colors.white}
format-padding = 2

label = %title%
label-maxlen = 100
label-empty =

[module/vpn]
type = custom/script
exec = wbm_vpn your-vpn-name
interval = 3.5
label-underline = ${colors.green}

[module/network]
type = internal/network
interface = your-interface-name
interval = 3.5
accumulate-stats = false

; Connected
format-connected = <label-connected>
format-connected-padding = 2
label-connected = %essid% (%signal%%) 
label-connected-underline = ${colors.green}
label-connected-foreground = ${colors.white}

; Disconnected
format-disconnected = <label-disconnected>
format-disconnected-padding = 2
label-disconnected = No internet
label-disconnected-underline =
label-disconnected-foreground = #66ffffff

[module/pulseaudio]
type = internal/pulseaudio
interval = 5

; Icons
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

; Default
format-volume = <label-volume> <ramp-volume>
label-volume = %percentage%%

; Muted
format-muted = <label-muted>
label-muted = 
label-muted-underline = ${colors.yellow}

[module/cpu]
type = internal/cpu
interval = 3.5
format = <label>
format-padding = 2
label = %percentage%% 

[module/date]
type = internal/date
interval = 5.0
date = %a, %b %d %Y %I:%M%P
